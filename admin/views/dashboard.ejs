<!DOCTYPE html>
<html lang="en">
<head>
<%- include ("partials/head") %>  
</head>

<body>
  <%- include ("partials/header") %>
  <div class="container-fluid" id="main">
    <div class="row row-offcanvas row-offcanvas-left">
      <%- include ("partials/sidebar") %>  

      <div class="col-md-9 col-lg-10 main">

        <h3 class="display-3 hidden-xs-down"> Dashboard </h3>
        <% if ( locals.error) { %> 
	        	<div class="alert alert-danger" role="alert"><%- locals.msg %></div>   
	    <% } %>
        <div class="row mb-3">
          <div class="col-xl-3 col-lg-6">
            <div class="card card-inverse card-success">
              <div class="card-block bg-success">
                <div class="rotate">
                  <i class="fa fa-user fa-5x"></i>
                </div>
                <h6 class="pad-10 text-uppercase">Users</h6>
                <h1 class="display-1"><a class="nav-link" href="/admin/adminUsersList"><%= locals.adminUser %></a></h1>
              </div>
            </div>
          </div>
          <div class="col-xl-3 col-lg-6">
            <div class="card card-inverse card-danger">
              <div class="card-block bg-danger">
                <div class="rotate">
                  <i class="fa fa-list fa-4x"></i>
                </div>
                <h6 class="pad-10 text-uppercase">Products</h6>
                <h1 class="display-1"><a class="nav-link" href="/admin/productsList"><%= locals.products %></a></h1>
              </div>
            </div>
          </div>
          <div class="col-xl-3 col-lg-6">
            <div class="card card-inverse card-info">
              <div class="card-block bg-info">
                <div class="rotate">
                  <i class="fa fa-twitter fa-5x"></i>
                </div>
                <h6 class="pad-10 text-uppercase">Customers</h6>
                <h1 class="display-1"><a class="nav-link" href="/admin/customersList"><%= locals.customers %></a></h1>
              </div>
            </div>
          </div>
          <div class="col-xl-3 col-lg-6">
            <div class="card card-inverse card-warning">
              <div class="card-block bg-warning">
                <div class="rotate">
                  <i class="fa fa-share fa-5x"></i>
                </div>
                <h6 class="pad-10 text-uppercase">Orders</h6>
                <h1 class="display-1"><a class="nav-link" href="/admin/orderList"><%= locals.order %></a></h1>
              </div>
            </div>
          </div>
        </div>
    </div>
  </div>
  <footer class="container-fluid">
    <%- include ("partials/footer") %>
  </footer>

</body>

</html>