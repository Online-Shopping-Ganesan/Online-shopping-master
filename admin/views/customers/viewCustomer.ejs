<!DOCTYPE html>
<html lang="en">
<head>
<%- include ("../partials/head") %>  
</head>

<body>
  <%- include ("../partials/header") %>
  <div class="container-fluid" id="main">
    <div class="row row-offcanvas row-offcanvas-left">
      <%- include ("../partials/sidebar") %>  

      <div class="col-md-9 col-lg-10 main">
		<div class="row">
        	<div class="col-md-9 col-lg-9"><h3 class="display-3 hidden-xs-down"> View Customer </h3></div>
        </div>
        <div class="col-lg-12 mb-12">
        	<% if ( locals.msg) { %> 
	        	<div class="alert <%= locals.error ? 'alert-danger' : 'alert-success' %>" role="alert"><%- locals.msg %></div>   
	        <% } %> 
          	  <div class="form-group">
			      <label for="f_name">First Name:</label>
			      <input type="text" class="form-control" id="f_name" readonly value="<%= locals.body.customerDtls.f_name %>">
			  </div>
			  <div class="form-group">
			      <label for="l_name">Last Name:</label>
			      <input type="text" class="form-control" id="l_name" readonly value="<%= locals.body.customerDtls.l_name %>">
			  </div>
			  <div class="form-group">
			      <label for="email">Email:</label>
			      <input type="email" class="form-control" id="email" readonly value="<%= locals.body.customerDtls.email %>">
			  </div>
			  <div class="form-group">
			      <label for="u_name">Mobile:</label>
			      <input type="text" class="form-control" id="mobile" readonly value="<%= locals.body.customerDtls.mobile %>">
			  </div>
			  <div class="form-group">
			      <label for="u_name">Address 1:</label>
			      <input type="text" class="form-control" id="address_1" readonly value="<%= locals.body.customerDtls.address_1 %>">
			  </div>
			  <div class="form-group">
			      <label for="u_name">Address 2:</label>
			      <input type="text" class="form-control" id="address_2" readonly value="<%= locals.body.customerDtls.address_2 %>">
			  </div>
			   <div class="form-group">
			      <label for="u_name">City:</label>
			      <input type="text" class="form-control" id="city" readonly value="<%= locals.body.customerDtls.city %>">
			  </div>
			  <div class="form-group">
			      <label for="u_name">Pin code:</label>
			      <input type="text" class="form-control" id="pincode" readonly value="<%= locals.body.customerDtls.pincode %>">
			  </div>
			  
			  <div class="form-group">
			      <label for="u_name">State:</label>
			      <select class="form-control" value="<%= locals.body.customerDtls.state_id %>" disabled>
			      		<% locals.body.stateList && locals.body.stateList.map(row => { %>
						    <option <%= row.id == locals.body.customerDtls.state_id ? 'selected' : '' %> value='<%= row.id %>'><%= row.name %></option>
						<% }) %>
			      </select>
			  </div>
			  
			  <div class="form-group">
			      <label for="u_name">Country:</label>
			      <select class="form-control" value="1" disabled>
			      		<option selected value='1'>India</option>
			      </select>
			  </div>
			  
			  <div class="form-group row">
				  <div class="col-sm-1">Active</div>
				    <div class="col-sm-11">
				      <div class="form-check">
				        <input class="form-check-input" type="checkbox" checked disabled="true" id="active">
				      </div>
				  </div>
			  </div>
			  <a type="button" href="/admin/customersList" class="btn btn-danger">Cancel</a>
        </div>
      </div>
  </div>
  <footer class="container-fluid">
    <%- include ("../partials/footer") %>
  </footer>
<script>
(function() {
  'use strict';
  window.addEventListener('load', function() {
    // Get the forms we want to add validation styles to
    var forms = document.getElementsByClassName('needs-validation');
    // Loop over them and prevent submission
    var validation = Array.prototype.filter.call(forms, function(form) {
      form.addEventListener('submit', function(event) {
        if (form.checkValidity() === false) {
          event.preventDefault();
          event.stopPropagation();
        }
        form.classList.add('was-validated');
      }, false);
    });
  }, false);
})();
</script>
</body>

</html>